{% extends "base.html.twig" %}


{% block stylesheets %}
	<link href="{{asset('assets/css/bouk.css')}}" media="all" rel="stylesheet" type="text/css"/>

{% endblock %}


{% block body %}
	<div class="container">

		<div class="row">

			<div class="col-12 col-sm-12 col-md-7 col-lg-7">


				<div class="card mb-3">
					<div class="card-header ">Reservation for :
						{{bouking.ad.title}}
					</div>
					<div class="card-body">
						<dl class="row">
							<dt class="col-3 col-sm-3 col-md-4 col-lg-6">Number of Reservation :</dt>
							<dd class="col-9 col-sm-9 col-md-8 col-lg-6">{{bouking.id}}</dd>

							<dt class="col-3  col-sm-3 col-md-6 col-lg-6">
								Start Date :
							</dt>
							<dd class="col-9 col-sm-9 col-md-6 col-lg-6">
								{{bouking.startDate | date("d/m/Y") }}</dd>


							<dt class="col-3  col-sm-3 col-md-6 col-lg-6">End Date :</dt>
							<dd class="col-9 col-sm-9 col-md-6 col-lg-6">{{bouking.endDate | date("d/m/Y")}}</dd>

							<dt class="col-3  col-sm-3 col-md-6 col-lg-6">Amount :</dt>
							<dd class="col-9 col-sm-9 col-md-6 col-lg-6">{{bouking.amount}}
								$</dd>

							<dt class="col-3  col-sm-3 col-md-6 col-lg-6">Comment :</dt>
							<dd class="col-9 col-sm-9 col-md-6 col-lg-6">{{bouking.comment}}</dd>

						</dl>
					</div>
				</div>
				<div class="card mb-3">
					<div class="card-header ">{{bouking.ad.title}}</div>


					<div id="carouselAd" class="carousel slide" data-ride="carousel">
						<div class="carousel-inner">


							{% for img in bouking.ad.images %}


								<div class="carousel-item {% if loop.index0 == 0 %} active {% endif %}">
									<img class="d-block w-100" src="{{asset('uploads/' ~ img.url)}}" alt="{{img.titleImage}}">
								</div>
							{% endfor %}

							<a class="carousel-control-prev" href="#carouselAd" role="button" data-slide="prev">
								<span class="carousel-control-prev-icon" aria-hidden="true"></span>
								<span class="sr-only">Previous</span>
							</a>
							<a class="carousel-control-next" href="#carouselAd" role="button" data-slide="next">
								<span class="carousel-control-next-icon" aria-hidden="true"></span>
								<span class="sr-only">Next</span>
							</a>
						</div>
					</div>


					<div class="card-body pt-2 pb-2">
						<p class="card-text">{{bouking.ad.introduction}}</p>
					</div>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">{{bouking.ad.rooms}}
							Room</li>
						<li class="list-group-item">{{bouking.ad.price}}
							$/ By Night</li>
						<li class="list-group-item">Vestibulum at eros</li>
					</ul>
				</div>


			</div>


			<div class="col-12 col-sm-12 col-md-5 col-lg-5">


				<div class="card mb-3 pb-3">
					<div class="card-header ">Owner</div>

					<div class="card-body pt-2 pb-2">
						<div class="d-flex">
							â€‹<picture>
								<source srcset="{{asset('avatars/avatar_2x.png')}}" type="image/png">
								<img src="{{asset('avatars/avatar_2x.png')}}" class="rounded-circle img-fluid img-thumbnail" alt="...">
							</picture>
							<div class="ml-3 w-100">
								<h4 class="mb-0 mt-0">{{bouking.ad.author.fullName}}</h4>
								<span>Senior Journalist</span>
								<span>Senior Journalist</span>
								<span>Senior Journalist</span>
								<div class="p-2 mt-2  d-flex justify-content-between rounded stats">
									<div class="d-flex flex-column mr-2">
										<span class="articles">
											<i class="fas fa-ad"></i>
										</span>
										<span class="number1">38</span>
									</div>
									<div class="d-flex flex-column mr-2">
										<span class="followers">
											<i class="fa fa-users"></i>
										</span>
										<span class="number2">980</span>
									</div>
									<div class="d-flex flex-column">
										<span class="rating">
											<i class="fas fa-star-half-alt"></i>
										</span>
										<span class="number3">8.9</span>
									</div>
								</div>
							</div>
						</div>
						<hr>
						<p class="card-text">{{bouking.ad.author.descreption}}</p>


					</div>
				</div>


				<div class="card mb-3 pb-3">
					<div class="card-header ">Rating</div>

					<div class="card-body pt-2 pb-2">

						<div class="row">


							<fieldset class="rating">

								{% for i  in 5..1 %}
									{% if rating != null and i >= rating.note %}
										<input type="radio" id="star{{i}}" name="rating" value="{{i}}" checked="checked"/><label class="full" for="star{{i}}"></label>
									{% else %}
										<input type="radio" id="star{{i}}" name="rating" value="{{i}}"/><label class="full" for="star{{i}}"></label>
									{% endif %}
								{% endfor %}


							</fieldset>

							<div class="caption pt-4">
								<div class="notctr">
									<span class="not"></span>
									<span>
										Stars</span>
								</div>

							</div>
						</div>


					</div>

					<div class="p-2">
						{{ form_start(ratingForm) }}

						{{form_widget(ratingForm)}}


						<button type="submit" class="browse btn btn-primary">Make Note</button>

						{{ form_end(ratingForm) }}

					</div>
				</div>
			</div>


		</div>
	</div>


</div>{% endblock body %}{% block javascripts %}

<script src="{{asset('assets/js/rating.js')}}"></script>{% endblock %}
